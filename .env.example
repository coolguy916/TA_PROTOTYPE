# Environment Configuration Template
# Copy this file to .env and customize the values

# Application Environment
NODE_ENV=development
ELECTRON_ENV=false

# Server Configuration
SERVER_PORT=3000
SERVER_HOST=localhost
CORS_ORIGIN=*

# WebSocket Configuration
WS_PORT=8080
WS_HOST=localhost
WS_PATH=/ws
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_DELAY=5000
WS_MAX_RECONNECT_ATTEMPTS=5
WS_COMPRESSION=true
WS_CORS_ORIGIN=*

# Database Configuration
# Options: mysql, firestore, hybrid
DB_TYPE=mysql

# MySQL Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=monitor_framework_db
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# Firestore Configuration (optional)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_KEY_FILE=path/to/your/service-account-key.json
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FIREBASE_COLLECTION=monitor_data

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRATION=24h
DB_ENCRYPTION_KEY=your-database-encryption-key-here
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-here

# Serial Communication Configuration
SERIAL_PORT=COM3
SERIAL_BAUD_RATE=9600
SERIAL_DATA_BITS=8
SERIAL_STOP_BITS=1
SERIAL_PARITY=none
SERIAL_AUTO_OPEN=true
SERIAL_HIGH_WATER_MARK=65536

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_NAME=app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_CONSOLE_ENABLED=true
LOG_COLORIZE=true

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Feature Flags
FEATURE_WEBSOCKET=true
FEATURE_SERIAL=true
FEATURE_FIRESTORE=false
FEATURE_ENCRYPTION=true
FEATURE_AUTH=true
FEATURE_REALTIME_SYNC=true