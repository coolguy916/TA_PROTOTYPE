{
  "name": "monitor-framework",
  "version": "2.0.0",
  "description": "Modular Real-time Monitoring and Control Framework - Universal Web & Desktop Application",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cross-env NODE_ENV=development nodemon server.js",
    "dev:frontend": "cross-env BROWSER=none react-scripts start",
    "dev:electron": "electron main.js",
    "start": "node server.js",
    "start:electron": "electron .",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "react-scripts build && mv build frontend/",
    "build:backend": "echo 'Backend build complete'",
    "build:web": "npm run build:frontend",
    "build:electron": "npm run build && electron-builder",
    "test": "react-scripts test",
    "test:watch": "react-scripts test --watch",
    "test:backend": "jest",
    "lint": "eslint App/ lib/ modules/ frontend/src/",
    "lint:fix": "eslint App/ lib/ modules/ frontend/src/ --fix",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "switch-db": "node scripts/switch-db.js",
    "deploy:web": "npm run build:web && echo 'Deploy to your hosting service'",
    "deploy:electron": "npm run build:electron",
    "setup": "npm install",
    "clean": "rimraf node_modules frontend/build frontend/dist-electron"
  },
  "keywords": [
    "monitor",
    "framework",
    "iot",
    "real-time",
    "websocket",
    "react",
    "electron",
    "modular",
    "database",
    "control-system"
  ],
  "author": {
    "name": "Monitor Framework Team",
    "email": "contact@monitor-framework.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^36.2.1",
    "eslint": "^8.57.0",
    "firebase-tools": "^13.35.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "electron-builder": "^24.0.0",
    "wait-on": "^7.0.1",
    "electron-is-dev": "^2.0.0"
  },
  "dependencies": {
    "@serialport/parser-readline": "^13.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "firebase": "^11.9.0",
    "firebase-admin": "^12.7.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mysql2": "^3.14.1",
    "serialport": "^13.0.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.18.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1",
    "axios": "^1.3.4",
    "chart.js": "^4.2.1",
    "react-chartjs-2": "^5.2.0",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/material": "^5.11.8",
    "@mui/icons-material": "^5.11.0",
    "@mui/x-data-grid": "^5.17.21",
    "date-fns": "^2.29.3",
    "recharts": "^2.5.0",
    "web-vitals": "^3.1.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.monitor.framework",
    "productName": "Monitor Framework",
    "directories": {
      "output": "frontend/dist-electron"
    },
    "files": [
      "frontend/build/**/*",
      "main.js",
      "preload.js",
      "lib/**/*",
      "modules/**/*",
      "App/**/*",
      "resource/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/monitor-framework.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/monitor-framework/issues"
  },
  "homepage": "https://github.com/your-username/monitor-framework#readme"
}
